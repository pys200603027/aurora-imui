<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/aurora_ll_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/im_input_bg"
        android:minHeight="40dp"
        android:orientation="horizontal"
        tools:visibility="visible">

        <cn.jiguang.imui.chatinput.emoji.widget.EmoticonsEditText
            android:layout_gravity="center_vertical"
            android:id="@+id/aurora_et_chat_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="输入新消息"
            android:inputType="textMultiLine"
            android:maxLength="600"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:textColor="#3a3a3a"
            android:textColorHint="#c7c6c3"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/aurora_ll_menuitem_container"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="发送"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quick_recorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/im_quick_recorder_bg"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:text="文字"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_quick_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:textSize="13dp"
            tools:text="60''" />
    </LinearLayout>
    
    <View
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <FrameLayout
        android:id="@+id/aurora_fl_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <cn.jiguang.imui.chatinput.emoji.EmojiView
            android:id="@+id/aurora_rl_emoji_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>